@model EntityLayer.Concrete.Certificate

@{
    ViewData["Title"] = "CertificateUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .card {
        margin: 25px;
        padding: 5px;
        box-shadow: 0 0 8px grey;
    }

        .card:hover {
            box-shadow: 0 0 10px #FF6699;
        }

    .text-cert {
        color: #FF6699;
    }

    form div {
        margin-bottom: 3%;
    }

</style>



<div id="wrapper">
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="header-title text-center text-cert">Sertifika Düzenleme Sayfası</h2>
                                <div class="row">
                                    <div class="col-lg-5 mx-auto">


                                        <form asp-action="CertificateUpdate" asp-area="Admin" asp-controller="AdminCertificate" method="post">
                                            <div class="form-group">
                                                <input type="hidden" asp-for="CertificateId" class="form-control" />
                                            </div>
                                            <div class="form-group">
                                                <label>Sertifika Adı</label>
                                                <input asp-for="CertificateName" class="form-control" />
                                                <span asp-validation-for="CertificateName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Alınan Kurum</label>
                                                <input asp-for="CertificationInstitution" class="form-control" />
                                                <span asp-validation-for="CertificationInstitution" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Açıklama</label>
                                                <textarea asp-for="CertificateDescription" class="form-control" rows="5"></textarea>
                                                <span asp-validation-for="CertificateDescription" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Başlangıç Tarihi</label>
                                                <input asp-for="CertificateStartDate" class="form-control" type="date" />
                                                <span asp-validation-for="CertificateStartDate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Bitiş Tarihi</label>
                                                <input asp-for="CertificateEndDate" class="form-control" type="date" />
                                                <span asp-validation-for="CertificateEndDate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Süresi</label>
                                                <input asp-for="EducationDurationHours" class="form-control" />
                                                <span asp-validation-for="EducationDurationHours" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-info">Güncelle</button>
                                                <a asp-controller="AdminPortfolio" asp-action="Index" class="btn btn-danger">İptal Et</a>
                                            </div>
                                        </form>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>