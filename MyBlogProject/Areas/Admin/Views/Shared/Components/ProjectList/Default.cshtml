@model List<Project>


<style>
    a {
        color: inherit;
        text-decoration: none;
    }

</style>


<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title mt-0 mb-3">Son Projeler</h4>

            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı</th>
                            <th>Açıklama</th>
                            <th>Tamamlanma Yüzdesi</th>
                            <th>Görsel</th>
                            <th>Durum</th>
                        </tr>
                    </thead>

                    @{
                        // Renkleri tutacak olan bir dizi oluşturuyoruz
                        string[] colors = { "bg-pink", "bg-info", "bg-warning", "bg-purple", "bg-success", "bg-primary"};
                        int colorIndex = 0; // Renk dizisindeki indeksi takip edecek değişken
                    }
                    @foreach (var item in Model)
                    {
                        if (item.ProjectStatus == true)
                        {

                            <tbody>
                                <tr>
                                    <td>@item.ProjectId</td>
                                    <td>@item.ProjectName</td>
                                    @if (item.ProjectSummary != null)
                                    {
                                        <td>@item.ProjectSummary.Substring(0, item.ProjectSummary.Substring(0, 35).LastIndexOf(" "))....</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td style="font-size:15px;"><span class="badge @colors[colorIndex % colors.Length]">@item.ProjectCompletion%</span></td>
                                    <td><img src="@item.Image1" class="img-fluid" style="width:100px; height:50;" /></td>
                                    <td style="font-size:15px;"><span class="badge @colors[colorIndex % colors.Length]">@item.ProjectStatus</span></td>
                                </tr>
                            </tbody>
                            colorIndex++; // Her bir döngüde renk indeksini bir arttırıyoruz
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>