@model EntityLayer.Concrete.Program
@{
    ViewData["Title"] = "ProgramUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .card {
        margin: 25px;
        padding: 5px;
        box-shadow: 0 0 8px grey;
    }

        .card:hover {
            box-shadow: 0 0 10px lightblue;
        }

</style>



<div id="wrapper">
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="header-title text-center text-:primary">Program Düzenleme Sayfası</h2>
                                <div class="row">
                                    <div class="col-lg-5 mx-auto">


                                        @using (Html.BeginForm("ProgramUpdate", "AdminProgram", FormMethod.Post))
                                        {
                                            @Html.Label("Program ID")
                                            @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
                                            <br />
                                            @Html.Label("Program Adı")
                                            @Html.TextBoxFor(x => x.ProgramName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.ProgramName)
                                            <br />
                                            <br />
                                            <button class="btn btn-info">Güncelle</button>
                                            <a href="/Admin/AdminPortfolio/index/" class="btn btn-danger">İptal Et</a>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>