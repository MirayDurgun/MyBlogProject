@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "AdminBlogUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .card {
        margin: 25px;
        padding: 5px;
        box-shadow: 0 0 8px grey;
    }

        .card:hover {
            box-shadow: 0 0 10px #80baf9;
        }

    form div {
        margin-bottom: 3%;
    }
</style>


<div id="wrapper">
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="header-title text-center text-primary">Blog Ekleme Sayfası</h2>
                                <div class="row">
                                    <div class="col-lg-5 mx-auto">

                                        <form asp-controller="AdminBlog" asp-area="Admin" asp-action="AdminBlogUpdate" method="post">
                                            <div class="form-group">
                                                <input type="hidden" asp-for="BlogID" class="form-control" />
                                            </div>
                                            <div class="form-group">
                                                <label>Blog Başlığı</label>
                                                <input asp-for="BlogTitle" class="form-control" />
                                                <span asp-validation-for="BlogTitle" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Görsel</label>
                                                <input asp-for="BlogImage" accept="" class="form-control" />
                                                <span asp-validation-for="BlogImage" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Kategori</label>
                                                <select asp-for="CategoryID" asp-items="@ViewBag.cv" class="form-control"></select>
                                            </div>
                                            <div class="form-group">
                                                <label>Açıklama</label>
                                                <textarea asp-for="BlogContent" class="form-control" rows="8" cols="10"></textarea>
                                                <span asp-validation-for="BlogContent" class="text-danger"></span>
                                            </div>
                                            <a href="/admin/admincategory/CategoryAdd/" type="submit" class="btn btn-info">Kategori Ekle</a>
                                            <button type="submit" class="btn btn-primary">Güncelle</button>
                                            <a href="/Admin/AdminBlog/index/" class="btn btn-danger">İptal Et</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
