@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="wrapper">
    <div class="content-page">
        <div class="content">

            <div class="row">
                <div class="col-sm-4">
                    <a href="/Admin/AdminBlog/BlogAdd/" class="btn btn-purple rounded-pill w-md waves-effect waves-light mb-3"><i class="mdi mdi-plus"></i> Yeni Blog Oluştur</a>
                </div>
            </div>

            <div class="col-xl-12">
                <div class="card">
                    <ul class="nav nav-pills nav-justified">
                        <li class="nav-item">
                            <a href="#" data-filter="*" class="nav-link active">
                                Tümü
                            </a>
                        </li>
                        @foreach (var item in Model.Select(m => m.BlogStatus).Distinct())
                        {
                            if (item == true)
                            {
                                <li class="nav-item">
                                    <a href="#" data-filter=".@item" class="nav-link">
                                        Yayında
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a href="#" data-filter=".@item" class="nav-link">
                                        Yayında Değil
                                    </a>
                                </li>
                            }


                        }
                    </ul>
                </div>
            </div>



            <div class="row">

                @if (Model != null)
                {

                    foreach (var item in Model)
                    {
                        <div class="col-xl-4 @item.BlogStatus" id="@item.BlogStatus">
                            <div class="card">
                                <div class="card-body project-box">
                                    @if (item.BlogStatus == true)
                                    {
                                        <div class="badge bg-success float-end">Yayında</div>
                                    }
                                    else
                                    {
                                        <div class="badge bg-danger float-end">Yayında Değil</div>
                                    }

                                    <h4 class="mt-0"><a href="" class="text-dark">@item.BlogTitle.ToUpper()</a></h4>
                                    <p class="text-success text-uppercase font-13">@item.Category.CategoryName</p>

                                    <p class="text-muted font-13">
                                        @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 350).LastIndexOf(" "))....
                                        <a href="/Admin/AdminBlog/BlogDetail/@item.BlogID" class="text-primary">Devamını Oku</a>
                                    </p>


                                    <ul class="list-inline">
                                        <li class="list-inline-item me-4">
                                            <h4 class="mb-0">56</h4>
                                            <p class="text-muted">Görüntülenme sayısı</p>
                                        </li>
                                        <li class="list-inline-item">
                                            <h4 class="mb-0">452</h4>
                                            <p class="text-muted">Yorum sayısı</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    }
                }
            </div>

        </div>
    </div>
</div>





