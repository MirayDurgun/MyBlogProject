@model EntityLayer.Concrete.ParentComment
@{
    ViewData["Title"] = "ParentAddComment";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<style>
    .card {
        margin: 25px;
        padding: 5px;
        box-shadow: 0 0 8px grey;
    }

    form div {
        margin-bottom: 3%;
    }
</style>


<div id="wrapper">
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="header-title text-center text-primary">Yorum Yanıtlama Sayfası</h2>
                                <div class="row">
                                    <div class="col-lg-5 mx-auto">

                                        <form asp-controller="Comment" asp-action="ParentAddComment" method="post">
                                            <input type="hidden" asp-for="CommentId" />
                                            <div class="form-group">
                                                <label>Ad Soyad</label>
                                                <input asp-for="ParentCommentUserName" class="form-control" />
                                                <span asp-validation-for="ParentCommentUserName" class="text-danger"></span>
                                            </div>   
                                            <div class="form-group">
                                                <label>Ad Soyad</label>
                                                <input asp-for="ParentCommentContent" class="form-control" />
                                                <span asp-validation-for="ParentCommentContent" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Görsel</label>
                                                <input type="file" asp-for="ParentImage" accept="" class="form-control" />
                                                <span asp-validation-for="ParentImage" class="text-danger"></span>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Gönder</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
