@model List<Program>


<style>
    .card {
        position: relative;
    }

    .program-close,
    .program-edit {
        position: absolute;
        top: 5px;
    }

    .program-close {
        right: 10px;
    }

    .program-edit {
        border: none;
        right: 40px;
        background: none;
        color: #a0a0a0;
    }

</style>



<div class="tab-pane" id="programs">
    <div class="col-12">
        <div class="card">
            <div class="row">
                <a href="/admin/adminprogram/programadd/" class="btn btn-warning mb-4"><i class="fas fa-code"></i> Program Ekle</a>

                @foreach (var item in Model)
                {
                   
                     <div class="col-md-3">
                            <div class="card border border-warning">
                                <div class="card-header text-center text-warning">
                                    <h5 class="card-title mt-2">@item.ProgramName</h5>
                                    <a href="/Admin/AdminProgram/ProgramUpdate/@item.Id" class="program-edit fas fa-pencil-alt">
                                    </a>

                                <a href="/Admin/AdminProgram/ProgramUpdate/@item.Id" class="program-close btn-close" aria-label="Sil"></a>

                                </div>
                            </div>
                        </div>
                  

                }
            </div>
        </div>
    </div>
</div>



