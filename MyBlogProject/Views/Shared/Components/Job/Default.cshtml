@model List<Job>


@if (Model != null)
{

    <div class="event">
        <h2>ÇALIŞMA GEÇMİŞİ</h2>
        <i class="pw-icon-bookmark-empty"></i>
    </div>

    @foreach (var item in Model)
    {
        <div class="event current">
            <span class="date">
                @(((DateTime)item.StartDate).ToString("MMMM yyyy")) -

                @if (item.EndDate.HasValue)
                {
                    <text>@item.EndDate.Value.ToString("MMMM yyyy")</text>
                }
                else
                {
                    <text>Devam Ediyor</text>
                }

            </span>

            <h4>@item.JobTitle</h4>
            <h5>@item.CompanyName</h5>
            <p>@item.Description</p>
        </div>
    }

}
