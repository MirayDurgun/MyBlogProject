@model List<Project>

@* portfolio için kullanıldı *@
@if (Model != null)
{
    <h2 class="section-title">PROJELER</h2>
    <div class="skillset">
        <div class="skill-unit">

            @foreach (var item in Model)
            {
                <a href="/Project/ProjectSingle/@item.ProjectId/" style="text-decoration: none; color: inherit;">
                    <h4>@item.ProjectName</h4>
                    <p>@item.ProjectSummary</p>
                    <p style="color:#c9b69b; font-size:13px; margin-top:auto;">Tamamlanma Yüzdesi</p>
                    <div style="margin-bottom:10%;" class="bar" data-percent="@item.ProjectCompletion">

                        <div class="progress"></div>
                    </div>
                </a>
            }

        </div>
    </div>
}
