@model List<Testimonial>



<style>

        .testimonial-img-container img {
            width: 80px;
            height: 170px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
            object-fit: cover;
            display: block;
        }
</style>

@if (Model != null)
{
    <h2 class="section-title">REFERANSLAR</h2>



    @foreach (var item in Model)
    {
        @* <div class="testo-group"> *@

        <div class="testo">
            <div class="testimonial-img-container mx-auto">
                <img src="~/blogtema/images/blog/02.jpg" />
            </div>
            <h4>

                @item.TestimonialsName
                <span style="color:#d9c5b5;">@item.TestimonialsJobTitle</span>
                <span>@item.TestimonialsCompanyName</span>
            </h4>
            <p>@item.TestimonialsDescription</p>
        </div>
        @* </div> *@
    }
}

