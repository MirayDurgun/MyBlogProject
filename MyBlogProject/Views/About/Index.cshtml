@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}


<div id="primary" class="content-area">
    <div id="content" class="site-content" role="main">
        <div class="layout-fixed">
            <article class="hentry post">

                @await Component.InvokeAsync("AboutforPortfolio")

                <div class="entry-content">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <p class="drop-cap">@item.AboutDetails1</p>
                        }


                        <blockquote>
                            Bir şeyi başarmanın anahtarı, sabırlı ve kararlı olmaktır. Pes etmemek, başarının yolunu açar.”
                        </blockquote>
                        foreach (var item in Model)
                        {

                            if (item.AboutDetails2 != null || item.AboutDetails3 != null || item.AboutDetails4 != null)
                            {
                                <blockquote class="alignleft" style="font-size:30px;">
                                    Geleceği belirlemek için geleceği tahmin etmekten daha etkilisi, onu yaratmaktır.
                                </blockquote>
                                <p>@item.AboutDetails2</p>
                                <p>@item.AboutDetails3</p>
                                <p>@item.AboutDetails4</p>
                            }
                        }
                    }
                </div>
            </article>
        </div>
    </div>
</div>

