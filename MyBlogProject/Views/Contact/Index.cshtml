@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div id="page" class="hfeed site">

    <div id="primary" class="content-area">
        >
        <div id="content" class="site-content" role="main">
            <div class="layout-fixed">
                <article class="hentry page">
                    <header class="entry-header">
                        <h1 class="entry-title">İletişim</h1>
                    </header>

                    <div class="entry-content">
                        <div class="contact-form">

                            <form method="post" asp-controller="Contact" asp-action="AddContact">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Ad Soyad</label>
                                        <input asp-for="ContactUserName" class="form-control" required minlength="5" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Mail</label>
                                        <input asp-for="ContactMail" class="required email" required minlength="5" />
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Mesaj</label>
                                    <textarea asp-for="ContactMessage" class="required" required minlength="15"></textarea>
                                </div>
                                <div>
                                    <button type="submit" class="form-gorup submit button" style="top:20px;"><span class="submit-label">Gönder</span><span class="submit-status"></span></button>
                                </div>
                            </form>
                            <br />
                            <br />  

                            <div class="contact-map inner-sec">

                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d770859.6821684174!2d27.765051662962353!3d40.99963830956285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa7040068086b%3A0xe1ccfe98bc01b0d0!2zxLBzdGFuYnVsLCBUw7xya2l5ZQ!5e0!3m2!1str!2sus!4v1702663032161!5m2!1str!2sus" width="600" height="300" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>

                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>
